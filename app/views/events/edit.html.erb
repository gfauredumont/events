<div class="card">
  <div class="card-block">
    <h4 class="card-title">Editing event</h4>
    <%= simple_form_for @event do |f| %>
	    <%= f.input :name %>
	    <%= f.input :venue %>
	    <%= f.input :start, as: :string %>
	    <%= f.input :end, as: :string %>
	    <%= f.input :image %>
	    <hr/>
	    <%= f.input :subject %>

	<div class="card card-inverse card-info mb-3">
		<div class="card-block">
			<blockquote class="card-blockquote">
				<p>Merge fields:</p>
				<ul>
					<li><code>{{first_name}}</code>: First name of the attendee</li>
					<li><code>{{last_name}}</code>: Last name of the attendee</li>
					<li><code>{{full_name}}</code>: Full name of the attendee</li>
				</ul>
			</blockquote>
		</div>
	</div>	

	    <%= f.input :model, as: :ckeditor %>
      <div class="text-right">
	    <%= link_to 'Cancel', event_path, class: "btn btn-outline-danger btn-lg" %>
	    <%= f.button :submit, class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">

$('#event_start').datetimepicker({step: 15, minDate: 0});
$('#event_end').datetimepicker({step: 15, minDate: 0});

</script>

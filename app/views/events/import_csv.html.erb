<div class="card">
  <div class="card-block">
    <h4 class="card-title">Import csv</h4>
	<%= form_tag do_import_csv_event_path, method: :post, multipart: true do %>
		<div class="form-group">
			<label class="control-label" for="attendee_first_name">
				<abbr title="required">*</abbr> File</label>
			  <%= file_field_tag :file, class: "form-control" %>
		</div>
		<div class="form-group">
			<label class="control-label" for="attendee_category_id">
				<abbr title="required">*</abbr> Category</label>
			<%= select_tag :category_id, options_from_collection_for_select(@event.categories, "id", "name"), include_blank: true %>
		</div>
		<div class="form-group">
			<div class="checkbox">
				<label class="boolean optional" for="attendee_send_invite">
					<%= check_box_tag :send_invites, 1, true %>
					Send invite
				</label>
			</div>
		</div>
      <div class="text-right">
	  <%= link_to 'Cancel', event_attendees_path(@event), class: "btn btn-outline-danger btn-lg" %>
	  <%= submit_tag :import, class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
